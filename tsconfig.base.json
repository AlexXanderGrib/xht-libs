{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@xxhax/safe-math": ["packages/safe-math/src/index.ts"],
      "@xxhax/sign": ["packages/sign/src/index.ts"],
      "@xxhax/bablo": ["packages/bablo/src/index.ts"],
      "@xxhax/luhn": ["packages/luhn/src/index.ts"],
      "@xxhax/match": ["packages/match/src/index.ts"],
      "@xxhax/validators": ["packages/validators/src/index.ts"],
      "@xxhax/vk-storage-wrapper": ["packages/vk-storage-wrapper/src/index.ts"],
      "@xxhax/time": ["packages/time/src/index.ts"],
      "@xxhax/emoji": ["packages/emoji/src/index.ts"],
      "@xxhax/events": ["packages/events/src/index.ts"],
      "@xxhax/lists": ["packages/lists/src/index.ts"],
      "@xxhax/queues": ["packages/queues/src/index.ts"],
      "@xxhax/strings": ["packages/strings/src/index.ts"],
      "@xxhax/remote-object": ["packages/remote-object/src/index.ts"],
      "@xxhax/payment-abstractions": [
        "packages/payment-abstractions/src/index.ts"
      ],
      "@xxhax/user-agent-parser": ["packages/user-agent-parser/src/index.ts"],
      "@xxhax/botkit": ["packages/botkit/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
